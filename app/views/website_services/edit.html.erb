<%- model_class = WebsiteService -%>
<div class="page-header">
  <h1><%=t '.title', :default => [:'helpers.titles.edit', 'Edit %{model}'], :model => model_class.model_name.human.titleize %></h1>
</div>
<%= form_for @website_service, :html => { :class => "form-horizontal website_service" } do |f| %>

    <% if @website_service.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@website_service.errors.count, "error") %> prohibited this website_service from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @website_service.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">

    <%= f.label :place, :class => 'control-label' %>
    <div class="controls">

      <%= @place.name %>
      <%= hidden_field(:website_service, :service_id, :value => @place.id) %>
    </div>
    <%= error_span(@website_service[:place_id]) %>
  </div>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
  </div>

    <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'form-control' %>
    </div>
  </div>


  <div class="control-group">
    <%= f.label :redirect_url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :redirect_url, :class => 'form-control' %>
    </div>
    <%= error_span(@website_service[:redirect_url]) %>
  </div>
  <p><p>

  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            website_services_path, :class => 'btn btn-default' %>

<% end %>

